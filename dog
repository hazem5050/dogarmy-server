<!-- WalletConnect Web3Modal -->
<script type="module">
import { createWeb3Modal, defaultConfig } from "https://unpkg.com/@web3modal/ethereum@2.6.1";

const projectId = "d5c1bd4a398f58d3a8beee555444111a"; // Example ID ‚Äì you can replace it

const chains = [{
  chainId: 56,
  name: "BNB Smart Chain",
  currency: "BNB",
  explorerUrl: "https://bscscan.com",
  rpcUrl: "https://bsc-dataseed.binance.org/"
}];

const metadata = {
  name: "DogArmy",
  description: "DogArmy Wallet Connect",
  url: "https://dogarmy.com",
  icons: ["https://dogarmy.com/logo.png"]
};

const config = defaultConfig({
  chains,
  projectId,
  metadata
});

createWeb3Modal({
  projectId,
  themeMode: "dark",
  themeVariables: {
    "--w3m-accent": "#00ff77"
  },
  ethereum: config
});

window.openModal = () => {
  const modal = document.querySelector("w3m-button");
  modal.click();
};
</script>

